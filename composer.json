{
    "name": "spatie/lighthouse-php",
    "description": "Run Google Lighthouse using PHP",
    "keywords": [
        "spatie",
        "lighthouse-php"
    ],
    "homepage": "https://github.com/spatie/lighthouse-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/process": "^6.1 || ^7.0 || ^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.22.1",
        "spatie/pest-plugin-snapshots": "^1.1",
        "spatie/ray": "^1.36",
        "spatie/temporary-directory": "^2.1.1"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Lighthouse\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Lighthouse\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
